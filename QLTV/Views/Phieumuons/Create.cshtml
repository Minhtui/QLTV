    <div class="form-group">
        @Html.LabelFor(model => model.Maphieu, "Mã phiếu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @using QLTV.Models;
            @{
                qlthuvien db = new qlthuvien();
            }
            @{

                var result = from pm in db.Phieumuons
                             select pm;
            }
            @Html.EditorFor(model => model.Maphieu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Maphieu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Madg, "Độc giả", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @{

                var docgia = from dg in db.Docgias
                             select dg;
                <select name="Madg">
                    @foreach (var item in docgia)
                    {
                        <option value="@item.Madg">@item.Tendg</option>
                    }
                </select>
            }
            @Html.ValidationMessageFor(model => model.Madg, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Manv, "Nhân viên", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @{

                var nhanvien = from nv in db.Nhanviens
                             select nv;
                <select name="Manv">
                    @foreach (var item in nhanvien)
                    {
                        <option value="@item.Manv">@item.Tennv</option>
                    }
                </select>
            }
            @Html.ValidationMessageFor(model => model.Madg, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ngaylapphieu, "Ngày lập phiếu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ngaylapphieu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ngaylapphieu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Ngaytra, "Ngày trả", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ngaytra, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ngaytra, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-default" />
        </div>
    </div>
</div>
}

